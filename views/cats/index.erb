<h1> Cats housed at Maggie's Moggies </h1>

<div id="cat-wrapper">
  <% @cats.each do |cat| %>

  <div class="cat">
    <h3><a href="/cats/<%= cat.id%>"><%=cat.name%></a>
    </h3>
    <p>Age: <%= cat.age %></p>
    <p>Gender: <%= cat.gender %></p>
    <p>Color: <%= cat.color %></p>
    <p>Description: <%= cat.description %></p>
    <p>Admission Date: <%= cat.admission_date %></p>
    <p>Status: <%= cat.status %></p>
    <p>Owner: <%= cat.owner.name %></p>


  </div>

  <% end %>

</div>
